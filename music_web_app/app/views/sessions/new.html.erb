<body>

  <section class="page"><div class="centered-box">
      <h1 style="font-size: 40px;
    color: #39BAAC;
    margin-bottom: 30px;">Sign in</h1>

      <a style="display: block;
    padding: 10px;
    border-radius: 5px;
    border: none;
    background-color: skyblue;
    color: #000;
    width: 100px;
    margin-bottom: 20px;"
    href="<%= new_user_url %>">Go to Sign-up!</a>
      <form action="<%= session_url %>" method="post">
        <input
          type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">

        <label style="color: white;" for="user_email_address">Email</label>
        <input type="text" name="user[email_address]" id="user_email_address">
        <br>

        <label style="color: white;" for="user_password">Password</label>
        <input type="password" name="user[password]" id="user_password">
        <br>

        <input type="submit">
      </form>
  </div></section>
</body>
